{
  "namespace": "start",

  "quit_icon": {
    "type": "image",
    "texture": "textures/ui/cancel",
    "layer": 3,
    "size": [ 13, 13 ]
  },

  "info_icon": {
    "type": "image",
    "texture": "textures/ui/info_icon",
    "layer": 3,
    "size": [ 16, 16 ]
  },

  "upper_online_buttons_panel/stacked_column/gamertag_pic_and_label": {
    "ignored": "$education_edition",
    "size": [ "100%c", 24 ],
    "controls": [
      {
        "spacer_0": {
          "type": "panel",
          "size": [ 10, 0 ]
        }
      },
      {
        "gamerpic_with_border": {
          "type": "panel",
          "size": [ 24, 24 ],
          "controls": [
            {
              "gamerpic": {
                "type": "image",
                "size": [ 22, 22 ],
                "offset": [ 0, 4 ],
                "layer": 1,
                "bindings": [
                  {
                    "binding_name": "#gamerpic_texture_path",
                    "binding_name_override": "#texture"
                  },
                  {
                    "binding_name": "#gamerpic_texture_location_type",
                    "binding_name_override": "#texture_file_system"
                  }
                ],
                "controls": [
                  {
                    "border_white@common.focus_border_white": {
                      "layer": 3,
                      "size": [ 24, 24 ]
                    }
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "spacer_2": {
          "type": "panel",
          "size": [ 5, 0 ]
        }
      },
      {
        "label_panel": {
          "type": "panel",
          "size": [ "fill", 24 ],
          "controls": [
            {
              "gamertag_label": {
                "type": "label",
                "color": "$main_header_text_color",
                "text": "#gamertag_label",
                "size": [ "default", 10 ],
                "offset": [ 0, 4 ],
                "shadow": true,
                "bindings": [
                  {
                    "binding_name": "#gamertag_label"
                  }
                ]
              }
            }
          ]
        }
      }
    ],
    "bindings": [
      {
        "binding_name": "(not #sign_in_visible)",
        "binding_name_override": "#visible"
      }
    ]
  },

  "upper_online_buttons_panel": {
    "ignored": "(not $start_screen_gamertag)",
    "bindings": []
  },


  "copyright_gote": {
    "type": "panel",
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "size": [ "100%", 10 ],
    "controls": [
      {
        "gote-supporter_version": {
          "type": "label",
          "color": "$main_header_text_color",
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "size": [ "default", 10 ],
          "offset": [ 0, -12 ],
          "text": "Gote-Supporter by ©YuuhaLand",
          "layer": 1,
          "controls": [
            {
              "label_background": {
                "type": "image",
                "texture": "textures/ui/White",
                "anchor_from": "top_right",
                "anchor_to": "top_right",
                "offset": [ 3, -1 ],
                "alpha": 0.6,
                "color": [ 0, 0, 0 ],
                "size": [ "100% + 4px", "100% + 2px" ],
                "layer": -5
              }
            }
          ]
        }
      },
      {
        "minecraft_version": {
          "type": "label",
          "color": "$main_header_text_color",
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "size": [ "default", 10 ],
          "text": "Minecraft by %menu.copyright",
          "layer": 1,
          "controls": [
            {
              "label_background": {
                "type": "image",
                "texture": "textures/ui/White",
                "anchor_from": "top_right",
                "anchor_to": "top_right",
                "offset": [ 3, -1 ],
                "alpha": 0.6,
                "color": [ 0, 0, 0 ],
                "size": [ "100% + 4px", "100% + 2px" ],
                "layer": -5
              }
            }
          ]
        }
      }
    ]
  },

  "version_gote": {
    "type": "panel",
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "size": [ "100%-2px", 10 ],
    "controls": [
      {
        "gote-supporter_version": {
          "type": "label",
          "color": "$main_header_text_color",
          "anchor_from": "top_right",
          "anchor_to": "top_right",
          "size": [ "default", 10 ],
          "offset": [ 0, -12 ],
          "text": "('Gote-Supporter v' + $gote_ver)",
          "layer": 1,
          "controls": [
            {
              "label_background": {
                "type": "image",
                "texture": "textures/ui/White",
                "anchor_from": "top_right",
                "anchor_to": "top_right",
                "offset": [ 3, -1 ],
                "alpha": 0.6,
                "color": [ 0, 0, 0 ],
                "size": [ "100% + 4px", "100% + 2px" ],
                "layer": -5
              }
            }
          ]
        }
      },
      {
        "gote-minecraft_version": {
          "type": "label",
          "color": "$main_header_text_color",
          "anchor_from": "top_right",
          "anchor_to": "top_right",
          "size": [ "default", 10 ],
          "text": "#text",
          "layer": 1,
          "bindings": [
            {
              "binding_name": "#version"
            },
            {
              "binding_type": "view",
              "source_property_name": "('Minecraft ' + #version)",
              "target_property_name": "#text"
            }
          ],
          "controls": [
            {
              "label_background": {
                "type": "image",
                "texture": "textures/ui/White",
                "anchor_from": "top_right",
                "anchor_to": "top_right",
                "offset": [ 3, -1 ],
                "alpha": 0.6,
                "color": [ 0, 0, 0 ],
                "size": [ "100% + 4px", "100% + 2px" ],
                "layer": -5
              }
            }
          ]
        }
      }
    ]
  },

  "text_panel": {
    "type": "panel",
    "size": [ "100%-2px", 10 ],
    "offset": [ 0, -1 ],
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "controls": [
      {
        "copyright_vanilla@start.copyright": {
          "ignored": "$show_gote_version"
        }
      },
      {
        "copyright_gote@start.copyright_gote": {
          "ignored": "(not $show_gote_version)"
        }
      },
      {
        "development_version@start.development_version": {
          "ignored": "(not $show_build_number)"
        }
      },
      {
        "version_vanilla@start.version": {
          "ignored": "$show_gote_version"
        }
      },
      {
        "version_gote@start.version_gote": {
          "ignored": "(not $show_gote_version)"
        }
      }
    ]
  },

  
  "lower_online_buttons_panel/stacked_column": {
    "modifications": [
      {
        "control_name": "achievements_btn",
        "operation": "insert_after",
        "value": [
          {
            "pack_info_padding": {
              "type": "panel",
              "size": [ 3, "100%" ]
            }
          },
          {
            "pack_info_btn@start.column_frame": {
              "size": [ 28, 32 ],
              "controls": [
                {
                  "pack_info_icon_button": {
                    "type": "panel",
                    "$button_tts_header": "manifestvalidation.title",
                    "controls": [
                      {
                        "pack_info_button@common_buttons.light_content_button": {
                          "size": [ 24, 24 ],
                          "$button_content": "start.info_icon",
                          "$pressed_button_name": "button.menu_buy_game"
                        }
                      }
                    ]
                  }
                }
              ]
            }
          }
        ]
      }
    ]
  }
}